<?xml version="1.0"?>
<config>
    <frontend>
        <routers>
            <gocoin_callback>
                <use>standard</use>
                <args>
                    <module>Gocoin_Gocoinpayment</module>
                    <frontName>gocoin_callback</frontName>
                </args>
            </gocoin_callback>
        </routers>
        <layout>			
            <updates>
                <Gocoinpayment>
                    <file>gocoinpayment.xml</file>
                </Gocoinpayment>
            </updates>
        </layout>
        <events>
            <sales_model_service_quote_submit_before>
                <observers>
                   <Gocoin_Gocoinpayment_Model_Placeorder>
                      <class>Gocoin_Gocoinpayment_Model_Placeorder</class>
                      <method>afterSaveOrder</method>
                   </Gocoin_Gocoinpayment_Model_Placeorder>
               </observers>
            </sales_model_service_quote_submit_before>
        </events>
    </frontend>
    <modules>
        <Gocoin_Gocoinpayment>
            <version>1.0.2</version>
        </Gocoin_Gocoinpayment>
    </modules>
    <global>
        <blocks>
            <gocoinpayment>
                <class>Gocoin_Gocoinpayment_Block</class>
            </gocoinpayment>
            <payment>  
                <class>Gocoin_Gocoinpayment_Block</class>
                <class>Mage_Payment_Block</class>  
            </payment> 
        </blocks>
        <models>
            <Gocoinpayment>
                <class>Gocoin_Gocoinpayment_Model</class>
                <resourceModel>Gocoin_resource</resourceModel>
            </Gocoinpayment>
            <Gocoin_resource>
                <class>Gocoin_Gocoinpayment_Model_Resource</class>
                <entities>
                    <ipn>
                        <table>gocoin_ipns</table>
                    </ipn>
                </entities>
            </Gocoin_resource>
        </models>
        <helpers>
            <Gocoinpayment>
                <class>Gocoin_Gocoinpayment_Helper</class>
            </Gocoinpayment>
        </helpers>
        <resources>
            <Gocoinpayment_setup>
                <setup>
                    <module>Gocoin_Gocoinpayment</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Gocoinpayment_setup>
            <Gocoinpayment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </Gocoinpayment_write>
            <Gocoinpayment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </Gocoinpayment_read>
        </resources>
        <fieldsets>
             <sales_convert_quote_payment>
                <coin_type>
                    <to_order_payment>*</to_order_payment>
                </coin_type>
             </sales_convert_quote_payment>
        </fieldsets>
    </global>
    <default>
        <payment>
            <Gocoinpayment>
                <active>1</active>
                <model>Gocoinpayment/paymentMethod</model>
                <title>GoCoin</title>
                <payment_action>authorize</payment_action>
            </Gocoinpayment>
        </payment>
    </default>
</config>